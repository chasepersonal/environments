apiVersion: certmanager.k8s.io/v1alpha1
kind: ClusterIssuer
metadata:
  name: letsencrypt-prod
  namespace:cert-manager
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ email }}
    privateKeySecretRef:
      name: letsencrypt-prod
    # Use cloudflare as dns challenge provider
    dns01:
      providers:
      - name: cf-dns
        cloudflare:
          email: {{ email }}
          apiKeySecretRef:
            name: cloudflare-secret
            key: api-key.txt